@using bubbl.Web.Models.Content
@model bubbl.Web.Models.Content.ContentPostModel

<div id="contents">
    <h3>Contents</h3>
    <div id="contentsArea">
        <table class="table table-condensed" id="contentsTable">
            <thead>
                <tr>
                    <th>Preview</th>
                    <th>Description</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var content in @Model.Contents)
                {
                    <tr class="contentRow">
                        <td class="">
                            <img src="@content.ImageUrl" class="previewImage" />
                        </td>
                        <td>@content.Description</td>
                        <td>@content.Location</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
